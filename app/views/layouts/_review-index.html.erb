        <!-- Review Post -->
        <div class="card mb-4">
          <% reviews.each do |review| %>
          <div id="index-image">
            <%= attachment_image_tag review, :image, fallback: "noimage.png", %>
          </div>
          <div class="card-body">
            <h4 class="card-title"><%= review.title %></h4>
            <p class="card-text"><%= review.body%></p>
          </div>
           <div class="comments ml-4">
              <p>Comment：<%= review.review_comments.count %></p>
              <p>Favorite: ♥<%= review.favorites.count %></p>
           </div>
           <div class="card-link ml-4">
              <div class="a"><%= link_to "View Moew", review_path(review) %></div>
              <div class="a"><%= link_to "#{review.user.user_name}", user_path(review.user), class: "card-link"%></div>
            </div>
            <%= link_to "Read More", review_path(review), class: "btn btn-primary mt-3"%>
          <div class="card-footer text-muted">
            Posted on <%= review.created_at %>
            <a href="/">EClothes</a>
          </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
          <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
          </li>
          <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
          </li>
        </ul>