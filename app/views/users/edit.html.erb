<div class="container setting-container">
    <!-- Heading Row -->
    <div class="row align-items-center mb-5 my-5">

      <div class="col-lg-3">
        <h2 class="title mt-5">Edit Profile</h2>
      </div>

      <!--error msg!-->
      <%= render "layouts/error_msg", resource: @user %>

      <div class="col-lg-12 text-center mt-5">

        <div class="User-info">

          <div class="col-lg-12 text-center">

            <%= form_with model:@user, url: users_my_page_path(@user), method: :patch, local:true do |f| %>

            <table class="table">

              <tr class="mt-3">
                <th><%= f.label "Image" %></th>
                <td class="pl-5"><%= f.attachment_field :image %></td>
              </tr>

              <tr class="mt-5">
                 <th class=""><%= f.label "name" %></th>
                <td class=""><%= f.text_field :name, size: 40 %></td>
              </tr>

              <tr class="mt-5">
                <th class=""><%= f.label "User Name" %></th>
                <td class=""><%= f.text_field :user_name, size: 40  %></td>
              </tr>

              <tr class="mt-5">
                <th class=""><%= f.label "Height" %></th>
                <td class=""><%= f.text_field :height, size: 40  %></td>
              </tr>

              <tr class="mt-5">
                <th class=""><%= f.label "Size" %></th>
                <td class=""><%= f.text_field :size, size: 40  %></td>
              </tr>

              <tr class="mt-5">
                <th class=""><%= f.label "Message" %></th>
                <td class=""><%= f.text_area :introduction, size: "40Ã—15" %>
              </tr>

            </table>

          </div>
          <!--/.col-lg-12-->

          <div class="col-lg-12 text-center mt-5">
           <%= f.submit "UPDATE", class: "btn btn-success pull-right admins-item-edit-btn mr-5" %>
           <%= link_to "Withdrawal", users_unsubscribe_path(@user), class: "btn btn-danger ml-5" %>
          </div>

        <% end %>
        <!--/.form_with-->

      </div>
      <!--user info-->

    </div>
    <!--/.col-lg-12-->

  </div>
  <!--/.row-->

</div>
<!--/.container-->